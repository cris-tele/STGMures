            </MudItem>
            <MudItem xs="6">
                <MudTextField Disabled="@_enabledOrDisabled" @bind-Value="category.Name" HelperText="Denumire procedura chirurgicala" Variant="Variant.Text" Margin="Margin.None"></MudTextField>
            </MudItem>
