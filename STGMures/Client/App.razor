@using StgMures.Client.Pages.AppLayout

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(StgMainLayout)">
                <NotAuthorized>
                    <Login/>
                </NotAuthorized>
                </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(StgMainLayout)">
                <p>Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>